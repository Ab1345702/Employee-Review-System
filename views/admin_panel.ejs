<style>
    main {
      padding: 20px;
      font-family: Arial, sans-serif;
    }
  
    #warning-by-server {
      color: red;
      font-weight: bold;
      margin-bottom: 15px;
    }
  
    #employee-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    .employee-list-item {
      background: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 5px;
      margin-bottom: 10px;
      padding: 10px 15px;
      transition: background-color 0.3s;
    }
  
    .employee-list-item:hover {
      background: #e9ecef;
    }
  
    .btn-primary, .btn-secondary {
      padding: 5px 15px;
      font-size: 0.9rem;
    }
  
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
      color: white;
    }
  
    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
  
    .btn-secondary {
      background-color: #6c757d;
      border-color: #6c757d;
      color: white;
    }
  
    .btn-secondary:hover {
      background-color: #5a6268;
      border-color: #5a6268;
    }
  
    .card {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      border: 1px solid #dee2e6;
    }
  
    .card-body {
      text-align: center;
    }
  
    .card-text {
      font-size: 1.2rem;
      font-weight: bold;
      color: #6c757d;
    }
  </style>
  
  <main>
    <div id="warning-by-server"></div>
  
    <% if(locals.employeesArr.length > 0) { %>
    <ul class="list-group" id="employee-list">
      <% for (let index = 0; index < employeesArr.length; index++) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center employee-list-item" id="<%= employeesArr[index].id %>">
          <span><%= employeesArr[index].name %></span>
  
          <% if (employeesArr[index].type == 'admin') { %>
            <button type="button" class="btn btn-secondary make-employee-btn">Make Employee</button>
          <% } else { %>
            <button type="button" class="btn btn-primary make-admin-btn">Make Admin</button>
          <% } %>
        </li>
      <% } %>
    </ul>
    <script src="/js/admin_panel.js"></script>
    <% } else { %>
    <div class="card" style="width: 95vw; height: 95vh;">
      <div class="card-body">
        <p class="card-text">No Employees Available</p>
      </div>
    </div>
    <% } %>
  </main>
  